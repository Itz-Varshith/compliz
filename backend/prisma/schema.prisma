generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  questionUUID String
  questionId   Int           @id @default(autoincrement())
  Submissions  Submissions[]
}

model Language {
  langId      Int           @id @default(autoincrement())
  langName    String
}

model User {
  userId      String        @id
  userEmail   String        @unique
  userName    String
  Submissions Submissions[]
  userCodes   userCodes[]
}

model Submissions {
  userID     User?     @relation(fields: [userId], references: [userId])
  userId     String
  questionID Question? @relation(fields: [questionId], references: [questionId])
  questionId Int
  code       String
  verdict    String
  timeUsed   Int
  memoryUsed Int
  langId     String
  createdAt  DateTime @default(now())

  @@id([userId, createdAt])
}

model userCodes {
  userID   User   @relation(fields: [userId], references: [userId])
  userId   String
  codeUUID String

  @@id([userId, codeUUID])
}
